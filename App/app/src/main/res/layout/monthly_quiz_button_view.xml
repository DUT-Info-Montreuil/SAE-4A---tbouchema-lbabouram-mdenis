<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="128dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/monthly_quiz_illustration"
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_marginBottom="-40dp"
            android:contentDescription="@string/monthly_quiz_illustration"
            android:src="@drawable/home_quiz_bar_shape"
            app:layout_constraintBottom_toBottomOf="@+id/change_monthly_quiz_button_admin"
            app:layout_constraintEnd_toEndOf="@+id/change_monthly_quiz_button_admin"
            app:layout_constraintStart_toStartOf="@+id/change_monthly_quiz_button_admin" />

        <Button
            android:id="@+id/change_monthly_quiz_button_admin"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="@drawable/home_monthlyquiz_shape"
            android:text="@string/monthly_quiz_illustration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>